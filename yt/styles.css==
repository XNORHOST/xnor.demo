/* Optional: nice, bold heading base */
.wild-h3 {
  font-family:"Poppins", sans-serif;
  font-weight: 800;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  display: inline-block;

  /* The animation magic */
  animation:
    colorCycle 2s linear infinite,
    wiggle 1.4s ease-in-out infinite alternate;

  /* Make the color pop with a glow that follows currentColor */
  filter: drop-shadow(0 0 10px currentColor);
  will-change: color, transform;
}

/* Color sequence: red → orange → green → blue */
@keyframes colorCycle {
  0% { color: #ff00cc; }
  25% { color: #3333ff; }
  50% { color: #00ffcc; }
  75% { color: #66ff66; }
  100% { color: #ffb347; }
}

/* “Wild shifting” motion: tilt + stretch + bounce */
@keyframes wiggle {
  0% { transform: translateY(0) rotate(0deg) scale(1) skew(0deg, 0deg); letter-spacing: 0.06em; }
  25% { transform: translateY(-2px) rotate(-2deg) scale(1.04) skew(-2deg, 0deg); letter-spacing: 0.08em; }
  50% { transform: translateY(0) rotate(2deg) scale(1.02) skew(2deg, 0deg); letter-spacing: 0.07em; }
  75% { transform: translateY(2px) rotate(-1deg) scale(1.03) skew(-1deg, 0deg); letter-spacing: 0.09em; }
  100% { transform: translateY(0) rotate(0deg) scale(1) skew(0deg, 0deg); letter-spacing: 0.06em; }
}

/* Respect users who prefer reduced motion */
@media (prefers-reduced-motion: reduce) {
  .wild-h3 {
    animation: colorCycle 6s linear infinite;
    transform: none;
    filter: none;
  }
}